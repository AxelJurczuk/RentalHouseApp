<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.InformationFragment">

    <TextView
        android:id="@+id/tv_about_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="16dp"
        android:textSize="12sp"
        android:fontFamily="@font/gothamssm_book"
        android:text="@string/about_description"/>

    <TextView
        android:id="@+id/tv_design"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_about_description"
        android:text="@string/design_and_development"
        android:textSize="16sp"
        android:fontFamily="@font/gothamssm_bold"
        android:textAllCaps="false"
        android:padding="16dp"/>

    <ImageView
        android:id="@+id/iv_dtt_banner"
        android:layout_width="145dp"
        android:layout_height="90dp"
        android:padding="16dp"
        android:src="@drawable/dtt_banner"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_design" />

    <TextView
        android:id="@+id/tv_by_dtt"
        android:layout_width="51dp"
        android:layout_height="27dp"
        android:layout_marginTop="36dp"
        android:text="@string/by_dtt"
        app:layout_constraintStart_toEndOf="@id/iv_dtt_banner"
        app:layout_constraintTop_toBottomOf="@id/tv_design" />


</androidx.constraintlayout.widget.ConstraintLayout>